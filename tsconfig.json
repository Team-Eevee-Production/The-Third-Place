{
    "compilerOptions": {
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      // this allows interopability btwn ES6 module syntax and CommonJS module syntax
      "outDir": "./dist/",
      "noImplicitAny": true,
      "target": "ESNext",
      // Can use CommonJS module syntax
      "module": "commonjs",
      // Knows to turn JSX components into `React.createElement`
      "jsx": "react",
      "allowJs": true,
      "moduleResolution": "node",
      "lib": ["dom", "dom.iterable", "esnext"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }